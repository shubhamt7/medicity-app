<% include ./partials/header %>
    <div class="row">
        <h1 style="text-align: center">Sign Up</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/register" method="post">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <label for="adminCode">Admin Code</label>
                    <input class="form-control" type="password" name="adminCode" placeholder="adminCode">
                    <small id="indication">* Not required if you are a user</small>
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-primary center-block">Sign Up!</button>
                </div>
            </form>
            <a href="/hospitals">Go Back</a>
        </div>
    </div>

</body>
</html>

